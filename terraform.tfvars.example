# ================================================================
# NEO VPS - Terraform Variables Example
# ================================================================
# Copy this file to terraform.tfvars and update with your values
# ================================================================

# ================================================================
# AWS Configuration
# ================================================================

aws_region  = "us-east-2"
environment = "production"

# ================================================================
# Customer Information
# ================================================================

customer_id     = "customer-001"
customer_domain = "example.com"

# ================================================================
# Server Configuration
# ================================================================

control_panel = "cpanel"
instance_type = "t3.medium"
server_ip     = "3.15.200.100"
deploy_server = false  # Set to true to deploy EC2 instance
ssh_key_name  = ""     # Add your SSH key name if deploying server

# ================================================================
# DNS Configuration
# ================================================================

enable_custom_nameservers = true
ns1_ip                    = "18.191.22.15"
ns2_ip                    = "3.15.200.100"

enable_additional_nameservers = true
ns3_ip                        = "54.152.161.12"
ns4_ip                        = "54.152.161.12"

# ================================================================
# Mail Configuration
# ================================================================

enable_mail_records = true
mail_server_ip      = ""  # Leave empty to use server_ip

# ================================================================
# Tags
# ================================================================

tags = {
  Project     = "NEO-VPS"
  ManagedBy   = "Terraform"
  Environment = "production"
}
