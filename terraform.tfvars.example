# ================================================================
# NEO VPS - Terraform Variables Example
# ================================================================
# Copy this file to terraform.tfvars and update with your values
# ================================================================

# ================================================================
# DNS CONFIGURATION
# ================================================================

# Custom nameservers (Primary & Secondary)
enable_custom_nameservers = true
ns1_ip = "18.191.22.15"      # Primary DNS IP (ns1.nexus-dxb.com)
ns2_ip = "YOUR_NS2_IP_HERE"  # Secondary DNS IP (ns2.nexus-dxb.com)

# Additional nameservers (NEW)
enable_additional_nameservers = true
ns3_ip = "54.152.161.12"     # nsfs.nexus-dxb.com
ns4_ip = "54.152.161.12"     # nsfs9-nexus-dxb.com

# ================================================================
# CUSTOMER & DOMAIN INFO
# ================================================================

customer_id = "customer-001"
domain      = "example.com"
server_ip   = "YOUR_SERVER_IP_HERE"

# ================================================================
# MAIL CONFIGURATION
# ================================================================

enable_mail_records = true
mail_server_ip      = ""  # Leave empty to use server_ip

# ================================================================
# PANEL CONFIGURATION
# ================================================================

panel_type = "cpanel"  # Options: cpanel, cyberpanel, directadmin, none

# ================================================================
# MONITORING
# ================================================================

enable_health_check = false
alarm_actions       = []  # Add SNS topic ARNs if needed

# ================================================================
# ENVIRONMENT
# ================================================================

environment = "production"  # Options: production, staging, development

# ================================================================
# TAGS
# ================================================================

tags = {
  Project     = "NEO-VPS"
  ManagedBy   = "Terraform"
  Environment = "production"
}
