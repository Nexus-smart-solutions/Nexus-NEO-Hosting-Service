# terraform.tfvars.example
# Example configuration for NEO VPS provisioning

# ================================================================
# CUSTOMER INFORMATION
# ================================================================

customer_id     = "acme-corp"
customer_domain = "acme-example.com"
customer_email  = "admin@acme-example.com"

# ================================================================
# PLAN SELECTION (NEW!)
# ================================================================
# Choose: core, scale, or titan
# This determines server specs automatically

plan_slug = "scale"  # Core ($29/mo), Scale ($79/mo), Titan ($199/mo)

# ================================================================
# MARKETPLACE ADD-ONS (NEW!)
# ================================================================
# Add optional services from the marketplace
# Leave empty [] for no add-ons

marketplace_addons = [
  "storage-ebs-100",      # Extra 100GB storage (+$10/mo)
  "security-waf",         # AWS WAF protection (+$25/mo)
  # "email-ses",          # SES email service (+$10/mo)
  # "cdn-cloudfront",     # CloudFront CDN (+$20/mo)
]

# ================================================================
# SERVER CONFIGURATION
# ================================================================
# Note: instance_type and storage sizes are determined by plan_slug
# These values are only used if plan_slug is not set

os_type       = "almalinux-8"    # almalinux-8, ubuntu-22.04, etc.
control_panel = "cyberpanel"     # cpanel, cyberpanel, directadmin, none

# ================================================================
# INFRASTRUCTURE
# ================================================================

aws_region   = "us-east-2"
environment  = "production"
ssh_key_name = "neo-deployment-key"

# ================================================================
# DNS CONFIGURATION
# ================================================================

enable_route53             = false  # Use Bind9 instead
enable_custom_nameservers  = true
ns1_ip                     = "18.191.22.15"   # Primary DNS
ns2_ip                     = "3.145.100.200"  # Secondary DNS

# ================================================================
# NETWORK
# ================================================================

vpc_cidr = "10.0.0.0/16"

# SSH access (leave empty for anywhere, or specify your IP)
admin_cidrs = [
  # "203.0.113.0/24",  # Your office IP
]

# ================================================================
# ADDITIONAL TAGS
# ================================================================

tags = {
  Department = "IT"
  CostCenter = "Engineering"
  Project    = "Website-Hosting"
}
